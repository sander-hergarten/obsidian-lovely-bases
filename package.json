{
  "name": "lovely-bases",
  "version": "0.2.1",
  "description": "Beautiful, visual bases views for Obsidian",
  "main": "main.js",
  "scripts": {
    "css": "npx @tailwindcss/cli -i src/main.css -o build/lovely-bases/styles.css --watch",
    "css:build": "npx @tailwindcss/cli -i src/main.css -o build/lovely-bases/styles.css --minify",
    "dev": "node esbuild.config.mjs",
    "dev:plugin": "node scripts/dev-install.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production && npm run css:build && node scripts/scope.js",
    "build:dev": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs && npm run css:build && node scripts/scope.js",
    "test": "vitest --project storybook",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "docs:serve": "storybook dev -p 6006",
    "docs:build": "npm run build-storybook",
    "build-storybook": "storybook build",
    "generate-story-order": "node scripts/generate-story-order.mjs",
    "videos:render": "npm run generate-story-order && npx remotion render src/remotion/index.ts \"$COMPOSITION\" build/remotion/$COMPOSITION.mp4"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@chromatic-com/storybook": "^4.1.3",
    "@remotion/cli": "4.0.406",
    "@remotion/player": "4.0.406",
    "@remotion/tailwind-v4": "4.0.406",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "builtin-modules": "^5.0.0",
    "electron": "^13.6.9",
    "esbuild": "0.27.2",
    "esbuild-plugin-copy": "^2.1.1",
    "lucide-static": "^0.562.0",
    "obsidian": "latest",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "postcss-prefix-selector": "^1.16.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "remotion": "4.0.406",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.18",
    "@toolwind/corner-shape": "0.0.8-3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "moment": "^2.30.1",
    "motion": "^12.24.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "streamdown": "^2.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "packageManager": "pnpm@8.15.9+sha512.499434c9d8fdd1a2794ebf4552b3b25c0a633abcee5bb15e7b5de90f32f47b513aca98cd5cfd001c31f0db454bc3804edccd578501e4ca293a6816166bbd9f81",
  "pnpm": {
    "overrides": {
      "immer": "^11.1.3"
    }
  }
}
